---
import BaseLayout from './BaseLayout.astro';
import EndMark from '../components/EndMark.astro';

interface Props {
  title: string;
  author: string;
  interviewee?: string;
  issueNumber: number;
  issueTitle: string;
  accentColor?: string;
}

const {
  title,
  author,
  interviewee,
  issueNumber,
  issueTitle,
  accentColor = '#800020'
} = Astro.props;
---
<BaseLayout title={title} issueAccent={accentColor}>
  <article class="conversation-page content-column">

    <header class="article-header">
      <p class="meta">Conversations â€” Issue {issueNumber}: {issueTitle}</p>
      <h1 class="article-page-title">{title}</h1>
      <p class="conversation-participants">
        <span class="author">{author}</span>
        {interviewee && (
          <>
            <span class="conversation-with"> in conversation with </span>
            <span class="author">{interviewee}</span>
          </>
        )}
      </p>
      <div class="rule-heavy" role="presentation"></div>
    </header>

    <div class="conversation-body">
      <slot />
    </div>

    <EndMark />

  </article>
</BaseLayout>
